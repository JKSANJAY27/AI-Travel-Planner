{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
  ],
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",                       
    "strict": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
